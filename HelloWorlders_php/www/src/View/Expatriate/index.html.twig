{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-3xl font-bold text-primary mb-6">Liste des profils</h1>

    <div class="overflow-x-auto shadow-md rounded-lg mx-auto w-[70rem]" >
        <table class=" w-full bg-white border border-gray-200">
            <thead class="bg-primary text-white">
            <tr>
                <th class="text-center py-3 text-left text-sm font-semibold">Nom</th>
                <th class="text-center py-3 text-left text-sm font-semibold">Prénom</th>
                <th class="text-center py-3 text-left text-sm font-semibold">Pays</th>
                <th class="text-center py-3 text-left text-sm font-semibold">Date d'arrivée</th>
                <th class="text-center py-3 text-left text-sm font-semibold">Date de départ</th>
                <th class="text-center py-3 text-left text-sm font-semibold"></th>

            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for expatriate in expatriates %}

                <tr>
                    <td class="text-center py-4 text-sm text-gray-700">{{ expatriate.Lastname }}</td>
                    <td class="text-center py-4 text-sm text-gray-700">{{ expatriate.Firstname }}</td>
                    <td class="text-center py-4 text-sm text-gray-700">
                        {{ expatriate.Country }}
                    </td>
                    <td class="text-center py-4 text-sm text-gray-700">
                        {{ expatriate.ArrivalDate|date('d/m/Y') }}
                    </td>
                    <td class="text-center py-4 text-sm text-gray-700">
                        {{ expatriate.DepartureDate|date('d/m/Y') }}
                    </td>
                    <td class="">
                        <div class=" mx-auto py-1 px-2 text-center bg-white rounded-md hover:opacity-80 text-secondary border border-secondary font-semibold w-fit">
                            <a href="/Expatriate/details/{{ expatriate.id }}">Voir plus</a></div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-6 py-4 text-center text-gray-500">Aucun expatrié trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
