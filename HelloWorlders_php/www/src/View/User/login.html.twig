{% extends "base.html.twig" %}
{% block title %}Login - {{ parent() }}{% endblock %}

{% block body %}
    <div class="bg-white shadow-md rounded-lg p-8 max-w-md w-full mx-auto mt-20">
        <h1 class="text-2xl font-bold text-primary mb-6 text-center">Se connecter</h1>
        <form method="post">

            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

            <div class="mb-4">
                <label for="mail" class="block text-gray-700 font-medium mb-2">Adresse e-mail</label>
                <input type="email" id="mail" name="mail" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:outline-none" placeholder="Votre mail" required>
            </div>
            <div class="mb-4">
                <label for="password" class="block text-gray-700 font-medium mb-2">Mot de passe</label>
                <input type="password" id="password" name="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:outline-none" placeholder="Mot de passe" required>
            </div>
            <button type="submit" class="w-full bg-primary text-white py-2 px-4 rounded-md hover:opacity-90 font-semibold">
                Valider
            </button>
        </form>
        <p class="mt-4 text-center text-gray-600">
            Pas encore de compte ?
            <a href="/User/create" class="text-secondary font-medium hover:underline">Cr√©ez-en un</a>
        </p>
    </div>
{% endblock %}